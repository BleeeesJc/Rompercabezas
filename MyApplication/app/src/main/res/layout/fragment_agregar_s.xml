<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Spinner
            android:id="@+id/spUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/modelo_sp1"
            android:padding="12dp"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spDificultad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/modelo_sp1"
            android:padding="12dp"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/entrada_us"
            android:hint="Tiempo"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/modelo_sp1"
            android:padding="12dp"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/entrada_us"
            android:hint="Fecha (yyyy-mm-dd)"
            android:inputType="date"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/btnAgregarPuntaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boton_login"
            android:gravity="center"
            android:padding="12dp"
            android:text="Agregar Puntaje"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
