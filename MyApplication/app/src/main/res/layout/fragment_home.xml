<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_menu"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutOpciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintWidth_min="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Spinner
            android:id="@+id/spdificultades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="250dp"
            android:layout_margin="12dp"
            android:textAlignment="center"
            android:gravity="center"
            android:spinnerMode="dropdown"
            app:layout_constraintWidth_min="250dp"/>

        <TextView
            android:id="@+id/tvGenerar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generar"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@drawable/modelo_boton1"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="12dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintWidth_min="250dp"/>

        <TextView
            android:id="@+id/tvSubir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subir una foto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/modelo_boton2"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="12dp"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            app:layout_constraintWidth_min="250dp"/>

        <TextView
            android:id="@+id/tvTomar"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tomar una foto"
            android:textSize="22sp"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:background="@drawable/modelo_boton3"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="16dp"
            android:elevation="8dp"
            app:layout_constraintWidth_min="250dp"/>

        <Spinner
            android:id="@+id/spTama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="250dp"
            android:layout_margin="12dp"
            android:textAlignment="center"
            android:gravity="center"
            android:spinnerMode="dropdown"
            app:layout_constraintWidth_min="250dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
