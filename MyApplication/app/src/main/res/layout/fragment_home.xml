<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_menu"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        >
        <Spinner
            android:id="@+id/spdificultades"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:textAlignment="center"
            android:gravity="center"
            android:spinnerMode="dropdown"/>

        <TextView
            android:id="@+id/tvGenerar"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:text="Generar"
            android:textSize="30dp"
            android:gravity="center"
            android:background="@drawable/modelo_boton1"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvSubir"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:text="Subir una foto"
            android:textSize="28dp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/modelo_boton2"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tvTomar"
            android:textStyle="bold"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:text="Tomar una foto"
            android:textSize="30dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:background="@drawable/modelo_boton3"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="20dp"
            android:elevation="20dp"/>

        <Spinner
            android:id="@+id/spTama"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:textAlignment="center"
            android:gravity="center"
            android:spinnerMode="dropdown"/>

    </LinearLayout>


</RelativeLayout>
